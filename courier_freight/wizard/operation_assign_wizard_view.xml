<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="view_assign_pick_wizard_form" model="ir.ui.view">
            <field name="name">assign.pick.wizard.form</field>
            <field name="model">assign.operation.wizard</field>
            <field name="arch" type="xml">
                <form string="Assign To Pick">
                    <group>
                        <group>
                            <field name="operation_ids" invisible="1"/>
                            <field name="user_id" placeholder="Assign To"/>
                        </group>
                     </group>
                    <notebook>

                    </notebook>

                    <footer>
                        <button string="Assign To Pick" type="object" name="action_assign_to_pick" class="btn-primary"/>
                        <button string="Cancel" class="btn-secondary" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>

    </data>

</odoo>