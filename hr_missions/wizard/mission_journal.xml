<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="mission_wizard_view_form" model="ir.ui.view">
            <field name="name">mission.wizard.form</field>
            <field name="model">mission.wizard</field>
            <field name="arch" type="xml">
                <form string="Create Entry">
                    <sheet>
                        <group>
                            <field name="journal_id" />
                            <field name="mission_id" invisible="1" />
                        </group>
                    </sheet>
                    <footer>
                        <button string='Pay' name="create_entry" type="object" class="btn-primary"/>
                        <button string="Cancel" class="btn-default" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>
    </data>
</odoo>