<?xml version="1.0" encoding="UTF-8"?>
<odoo>
	<data>
		<!--Wizard For Message Box -->
		<record id="wizard_message_form" model="ir.ui.view">
			<field name="name">Your Dialog Box Wizard Name</field>
			<field name="model">display.dialog.box</field>
			<field name="type">form</field>
			<field name="arch" type="xml">
				<form string="Message" version="7.0">
					<separator string="Message" colspan="6"/>
					<field name="text" colspan="4" nolabel="1" readonly="1"  widget="html"/>                                                            
					<newline/>
					<separator colspan="6"/>
					<footer>
						<button special="cancel" string="OK" class="oe_highlight"/>
					</footer>                                    
				</form>
			</field>
		</record>
		
	</data>
</odoo>
